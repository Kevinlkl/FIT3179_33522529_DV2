{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 1340,
  "height": 300,
  "title": {
    "text": "GDP vs GNI (Real Annual Values)",
    "fontSize": 20,
    "fontWeight": "bold",
    "font": "Serif",
    "anchor": "start"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/Kevinlkl/FIT3179_33522529_DV2/main/Datasets/gdp_gni/gdp_gni_annual_real.csv",
    "format": {
      "type": "csv"
    }
  },
  "transform": [
    {
      "filter": "datum.series == 'abs'"
    },
    {
      "calculate": "year(datum.date)",
      "as": "Year"
    },
    {
      "filter": "parseInt(datum.Year) % 4 == 0"
    },
    {
      "fold": ["gdp", "gni"],
      "as": ["Indicator", "Value"]
    },
    {
      "aggregate": [{
        "op": "mean",
        "field": "Value",
        "as": "Value"
      }],
      "groupby": ["Year", "Indicator"]
    }
  ],
  "mark": {
    "type": "rect",
    "stroke": "black",
    "strokeWidth": 0.1
  },
  "encoding": {
    "x": {
      "field": "Year",
      "type": "ordinal",
      "title": "Year",
      "axis": {"labelAngle": -45}
    },
    "y": {
      "field": "Indicator",
      "type": "nominal",
      "title": "Category"
    },
    "color": {
      "field": "Value",
      "type": "quantitative",
      "title": "Value (RM)",
      "scale": {
        "scheme": "blues",
        "type": "linear",
        "domain": [100000, 200000, 300000, 400000, 500000, 600000, 700000, 800000, 900000, 1000000, 1100000, 1200000]
      }
    },
    "tooltip": [
      {"field": "Indicator", "type": "nominal", "title": "Metric"},
      {"field": "Year", "type": "ordinal", "title": "Year"},
      {
        "field": "Value",
        "type": "quantitative",
        "title": "Value (RM)",
        "format": ",.2f"
      }
    ]
  }
}

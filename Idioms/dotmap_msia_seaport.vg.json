{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
        "text": "Distribution of Seaports in Malaysia",
        "subtitle": "Locations and Information of Seaports across Malaysia",
        "fontSize": 20,
        "anchor": "start",
        "font": "Serif"
    },
    "width": 750,
    "height": 400,
    "projection": {
        "type": "mercator",
        "center": [109.5, 4],
        "scale": 2100
    },
    "layer": [
        {
            "data": {
                "sphere": true
            },
            "mark": {
                "type": "geoshape",
                "fill": "#e6f3ff"
            }
        },
        {
            "data": {
                "graticule": {"step": [1, 1]}
            },
            "mark": {
                "type": "geoshape",
                "fill": null,
                "stroke": "lightgray",
                "strokeWidth": 0.5
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/Kevinlkl/FIT3179_33522529_DV2/main/Datasets/malaysia_map.json",
                "format": {
                    "type": "topojson",
                    "feature": "my"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "lightgray",
                "stroke": "white",
                "strokeWidth": 1
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/Kevinlkl/FIT3179_33522529_DV2/main/Datasets/malaysia_seaports.csv",
                "format": {"type": "csv"}
            },
            "mark": {
                "type": "circle",
                "opacity": 0.9,
                "stroke": "white",
                "strokeWidth": 1.5,
                "color": "#2E86AB",
                "size": 200
            },
            "encoding": {
                "longitude": {
                    "field": "Longitude",
                    "type": "quantitative"
                },
                "latitude": {
                    "field": "Latitude",
                    "type": "quantitative"
                },
                "tooltip": [
                    {"field": "Port Name", "type": "nominal", "title": "Port Name"},
                    {"field": "Port Code", "type": "nominal", "title": "Port Code"}
                ]
            }
        },
        {
            "data": {
                "values": [
                    {"longitude": 100.8, "latitude": 2.5, "label": "Strait of Malacca"},
                    {"longitude": 103.6, "latitude": 1.1, "label": "Tebrau Strait"},
                    {"longitude": 113, "latitude": 6, "label": "South China Sea"}
                ]
            },
            "mark": {
                "type": "text",
                "fontSize": 14,
                "fontWeight": "bold",
                "fontStyle": "italic",
                "color": "#1f4e79",
                "angle": 15
            },
            "encoding": {
                "longitude": {"field": "longitude", "type": "quantitative"},
                "latitude": {"field": "latitude", "type": "quantitative"},
                "text": {"field": "label", "type": "nominal"}
            }
        },
        {
            "data": {"values": [{"legend": "Seaports"}]},
            "mark": {
                "type": "point",
                "filled": true,
                "size": 200,
                "color": "#2E86AB",
                "stroke": "white",
                "strokeWidth": 1.5,
                "opacity": 0.9
            },
            "encoding": {
                "x": {"value": 650},
                "y": {"value": 350},
                "tooltip": {"value": null}
            }
        },
        {
            "data": {"values": [{"text": "Seaports"}]},
            "mark": {
                "type": "text",
                "align": "left",
                "baseline": "middle",
                "dx": 10,
                "fontSize": 12,
                "color": "#333"
            },
            "encoding": {
                "x": {"value": 650},
                "y": {"value": 350},
                "text": {"field": "text", "type": "nominal"}
            }
        }
    ]
}
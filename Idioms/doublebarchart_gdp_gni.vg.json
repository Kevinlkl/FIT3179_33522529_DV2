{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
        "text": "Malaysia: GDP vs GNI (Current US$)",
        "fontSize": 18,
        "fontWeight": "bold",
        "font": "Serif"
    },
    "width": 700,
    "height": 400,
    "data": {
        "url": "https://raw.githubusercontent.com/Kevinlkl/FIT3179_33522529_DV2/main/Datasets/gdp_gni/gdp_gni_annual_real.csv",
        "format": {"type": "csv"}
    },
    "transform": [
        {
            "filter": "datum['Indicator Name'] == 'GDP (current US$)' || datum['Indicator Name'] == 'GNI (current US$)'"
        },
        {
            "filter": "datum.Year >= 2000 && datum.Year <= 2024"
        },
        {
            "calculate": "datum['Indicator Name'] == 'GDP (current US$)' ? 'GDP' : 'GNI'",
            "as": "Economic_Indicator"
        },
        {
            "calculate": "datum.Value / 1000000000",
            "as": "Value_Billions"
        }
    ],
    "mark": {
        "type": "bar",
        "tooltip": true
    },
    "encoding": {
        "x": {
            "field": "Year",
            "type": "ordinal",
            "title": "Year",
            "axis": {
                "labelAngle": -45
            }
        },
        "y": {
            "field": "Value_Billions",
            "type": "quantitative",
            "title": "Value (Billions US$)",
            "axis": {"grid": true}
        },
        "color": {
            "field": "Economic_Indicator",
            "type": "nominal",
            "title": "Economic Indicator",
            "scale": {
                "domain": ["GDP", "GNI"],
                "range": ["#2E8B57", "#4682B4"]
            },
            "legend": {
                "title": "Economic Indicator",
                "titleFontSize": 12,
                "labelFontSize": 11
            }
        },
        "xOffset": {
            "field": "Economic_Indicator",
            "scale": {
                "domain": ["GDP", "GNI"],
                "range": [-10, 10]
            }
        },
        "tooltip": [
            {"field": "Year", "type": "ordinal", "title": "Year"},
            {"field": "Economic_Indicator", "type": "nominal", "title": "Indicator"},
            {"field": "Value_Billions", "type": "quantitative", "title": "Value (Billions US$)", "format": ".2f"}
        ]
    }
}
{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
        "text": "Malaysia Productivity by Sector (Normalized, 2015=100)",
        "subtitle": "Productivity output per hour normalized to 2015 baseline across sectors",
        "fontSize": 24,
        "fontWeight": "bold",
        "font": "Serif",
        "anchor": "start"
    },
    "width": 700,
    "height": 400,
    "data": {
        "url": "https://raw.githubusercontent.com/Kevinlkl/FIT3179_33522529_DV2/main/Datasets/productivity/productivity_annual_normalized.csv",
        "format": {"type": "csv"}
    },
    "transform": [
        {
            "filter": "datum.sector == 'p1' || datum.sector == 'p2' || datum.sector == 'p3' || datum.sector == 'p4' || datum.sector == 'p5'"
        },
        {
            "filter": "datum.series == 'abs'"
        },
        {
            "calculate": "toDate(datum.date)",
            "as": "parsed_date"
        },
        {
            "filter": "datum.normalized_productivity != null"
        }
    ],
    "params": [
        {
        "name": "selector",
        "select": {"type": "point", "fields": ["sector"]},
        "bind": "legend"
        }
    ],
    "mark": {
        "type": "line",
        "point": true,
        "strokeWidth": 3,
        "tooltip": true
    },
    "encoding": {
        "x": {
            "field": "parsed_date",
            "type": "temporal",
            "title": "Year",
            "axis": {
                "format": "%Y",
                "tickCount": 8
            }
        },
        "y": {
            "field": "normalized_productivity",
            "type": "quantitative",
            "title": "Productivity Index (2015 = 100)",
            "scale": {"zero": false}
        },
        "color": {
            "field": "sector",
            "type": "nominal",
            "title": "Sector",
            "scale": {
                "domain": ["p1", "p2", "p3", "p4", "p5"],
                "range": ["#1f77b4", "#ff7f0e", "#FFD700", "#d62728", "#9467bd"]
            },
            "legend": {
                "title": "Productivity Sectors",
                "orient": "top-left",
                "titleFontSize": 12,
                "labelFontSize": 11,
                "labelExpr": "datum.value == 'p1' ? 'Agriculture' : datum.value == 'p2' ? 'Mining and quarrying' : datum.value == 'p3' ? 'Manufacturing' : datum.value == 'p4' ? 'Construction' : 'Services'"
            }
        },
        "opacity": {
                "condition": {"param": "selector", "value": 0.8},
                "value": 0.2
        },
        "tooltip": [
            {"field": "parsed_date", "type": "temporal", "title": "Year", "format": "%Y"},
            {"field": "sector", "type": "nominal", "title": "Sector"},
            {"field": "normalized_productivity", "type": "quantitative", "title": "Index (2015=100)", "format": ".1f"},
            {"field": "output_hour", "type": "quantitative", "title": "Original Value", "format": ".1f"}
        ]
    }
}
{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
        "text": "Distribution of Airports in Malaysia",
        "fontSize": 24,
        "anchor": "start",
        "font": "Serif"
    },
    "width": 750,
    "height": 400,
    "params": [
        {
            "name": "zoom_level",
            "value": 2100,
            "bind": {
                "input": "range",
                "min": 2100,
                "max": 14000,
                "step": 100,
                "name": "Zoom Level: "
            }
        },
        {
            "name": "center_to",
            "value": [109.5, 4],
            "bind": {
                "input": "select",
                "options": [
                    [101.6869, 3.1390],
                    [100.8327, 5.4141],
                    [102.2501, 5.7239],
                    [101.0901, 5.9804],
                    [103.4265, 3.8077],
                    [101.9758, 3.0297],
                    [102.3386, 2.5896],
                    [101.9424, 4.5975],
                    [102.4378, 2.0535],
                    [103.8256, 1.9854],
                    [110.3294, 1.5533],
                    [117.2753, 5.7788],
                    [118.0079, 4.2105],
                    [113.9914, 4.4148]
                ],
                "labels": [
                    "Kuala Lumpur",
                    "Penang",
                    "Kelantan",
                    "Kedah",
                    "Pahang",
                    "Selangor",
                    "Negeri Sembilan",
                    "Perak",
                    "Melaka",
                    "Johor",
                    "Sarawak",
                    "Sabah",
                    "Labuan",
                    "Sarawak (Central)"
                ],
                "name": "Map Center: "
            }
        }
    ],
    "projection": {
        "type": "mercator",
        "center": {"expr": "center_to"},
        "scale": {"expr": "zoom_level"}
    },
    "layer": [
        {
            "data": {
                "sphere": true
            },
            "mark": {
                "type": "geoshape",
                "fill": "#e6f3ff"
            }
        },
        {
            "data": {
                "graticule": {"step": [1, 1]}
            },
            "mark": {
                "type": "geoshape",
                "fill": null,
                "stroke": "lightgray",
                "strokeWidth": 0.5
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/Kevinlkl/FIT3179_33522529_DV2/main/Datasets/malaysia_map.json",
                "format": {
                    "type": "topojson",
                    "feature": "my"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "lightgray",
                "stroke": "white",
                "strokeWidth": 1
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/Kevinlkl/FIT3179_33522529_DV2/main/Datasets/my-airports.csv",
                "format": {"type": "csv"}
            },
            "transform": [
                {
                    "filter": "datum.type != 'closed' && datum.type != 'heliport'"
                }
            ],
            "mark": {
                "type": "circle",
                "opacity": 0.8,
                "stroke": "white",
                "strokeWidth": 0.5,
                "size": 100
            },
            "encoding": {
                "longitude": {
                    "field": "longitude_deg",
                    "type": "quantitative"
                },
                "latitude": {
                    "field": "latitude_deg",
                    "type": "quantitative"
                },
                "color": {
                    "field": "type",
                    "type": "nominal",
                    "scale": {
                        "domain": ["small_airport", "medium_airport", "large_airport"],
                        "range": ["#FFD700", "#FF8C00", "#FF0000"]
                    },
                    "legend": { 
                        "title": "Airport Types",
                        "labelExpr": "datum.label == 'small_airport' ? 'Small Airport' : datum.label == 'medium_airport' ? 'Medium Airport' : 'Large Airport'",
                        "orient": "bottom-right",
                        "direction": "horizontal"
                    }
                },
                "tooltip": [
                    {"field": "name", "type": "nominal", "title": "Airport Name"},
                    {"field": "region_name", "type": "nominal", "title": "Region Name"}
                ]
            }
        },
        {
        "data": {
            "url": "https://raw.githubusercontent.com/Kevinlkl/FIT3179_33522529_DV2/main/Datasets/my-airports.csv",
            "format": {"type": "csv", "parse": { "Longitude": "number", "Latitude": "number" } }
            },
            "transform": [
                { "filter": "datum.type != 'closed' && datum.type != 'heliport'" },
                {
                "lookup": "name",
                "from": {
                    "data": {
                    "values": [
                        {"name": "Kuala Lumpur International Airport", "label": "Kuala Lumpur International Airport", "dx": -1.05, "dy": -1.70}
                    ]
                    },
                    "key": "name",
                    "fields": ["label","dx","dy"]
                }
                },
                { "filter": "isValid(datum.label)" },
                { "calculate": "toNumber(datum.longitude_deg) + datum.dx", "as": "labelLon" },
                { "calculate": "toNumber(datum.latitude_deg) + datum.dy", "as": "labelLat" },
                { "calculate": "'Kuala Lumpur; International Airport'", "as": "label" },
                { "calculate": "split(datum.label, ';')", "as": "labelDone" }
            ],
            "layer": [
                {
                "mark": {"type": "rule", "color": "#2E86AB", "strokeWidth": 1},
                "encoding": {
                    "longitude": {"field": "longitude_deg"},
                    "latitude": {"field": "latitude_deg"},
                    "longitude2": {"field": "labelLon"},
                    "latitude2": {"field": "labelLat"}
                }
                },
                {
                "mark": {
                    "type": "text",
                    "align": "left",
                    "dx": -9,
                    "dy": 5,
                    "fontSize": 11,
                    "fontWeight": "bold",
                    "fill": "#111",
                    "stroke": "black",
                    "strokeWidth": 0.1
                },
                "encoding": {
                    "longitude": {"field": "labelLon"},
                    "latitude": {"field": "labelLat"},
                    "text": {"field": "labelDone"}
                }
                }
            ]
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Kevinlkl/FIT3179_33522529_DV2/main/Datasets/my-airports.csv",
        "format": { "type": "csv" }
      },
      "transform": [
        { "filter": "datum.name == 'Penang International Airport'" },
        { "calculate": "'Penang International; Airport'", "as": "label" },
        { "calculate": "split(datum.label, ';')", "as": "labelDone" },
        { "calculate": "toNumber(datum.longitude_deg) + 0.50", "as": "labelLon" },
        { "calculate": "toNumber(datum.latitude_deg)  + 1.20", "as": "labelLat" }
      ],
      "layer": [
        {
          "mark": { "type": "rule", "color": "#2E86AB", "strokeWidth": 1 },
          "encoding": {
            "longitude": { "field": "longitude_deg" },
            "latitude":  { "field": "latitude_deg"  },
            "longitude2": { "field": "labelLon" },
            "latitude2":  { "field": "labelLat" }
          }
        },
        {
          "mark": { "type": "text", "align": "left", "dx": 0, "dy": -10, "fontSize": 11, "fontWeight": "bold", "fill": "#111", "stroke": "black", "strokeWidth": 0.1 },
          "encoding": {
            "longitude": { "field": "labelLon" },
            "latitude":  { "field": "labelLat"  },
            "text":      { "field": "labelDone" }
          }
        }
      ]
    },
    {
      "data": { "url": "https://raw.githubusercontent.com/Kevinlkl/FIT3179_33522529_DV2/main/Datasets/my-airports.csv", "format": { "type": "csv" } },
      "transform": [
        { "filter": "datum.name == 'Kota Kinabalu International Airport'" },
        { "calculate": "toNumber(datum.longitude_deg) - 1.70", "as": "labelLon" },
        { "calculate": "toNumber(datum.latitude_deg)  + 0.15", "as": "labelLat" },
        { "calculate": "'Kota Kinabalu; International Airport'", "as": "label" },
        { "calculate": "split(datum.label, ';')", "as": "labelDone" }
      ],
      "layer": [
        {
          "mark": { "type": "rule", "color": "#2E86AB", "strokeWidth": 1 },
          "encoding": {
            "longitude": { "field": "longitude_deg" },
            "latitude":  { "field": "latitude_deg"  },
            "longitude2": { "field": "labelLon" },
            "latitude2":  { "field": "labelLat" }
          }
        },
        {
          "mark": { "type": "text", "align": "left", "dx": -100, "dy": -20, "fontSize": 11, "fontWeight": "bold", "fill": "#111", "stroke": "black", "strokeWidth": 0.1 },
          "encoding": {
            "longitude": { "field": "labelLon" },
            "latitude":  { "field": "labelLat"  },
            "text":      { "field": "labelDone" }
          }
        }
      ]
    },
    {
      "data": { "url": "https://raw.githubusercontent.com/Kevinlkl/FIT3179_33522529_DV2/main/Datasets/my-airports.csv", "format": { "type": "csv" } },
      "transform": [
        { "filter": "datum.name == 'Kuching International Airport'" },
        { "calculate": "toNumber(datum.longitude_deg) - 0.85", "as": "labelLon" },
        { "calculate": "toNumber(datum.latitude_deg)  + 1.10", "as": "labelLat" },
        { "calculate": "'Kuching; International Airport'", "as": "label" },
        { "calculate": "split(datum.label, ';')", "as": "labelDone" }
      ],
      "layer": [
        {
          "mark": { "type": "rule", "color": "#2E86AB", "strokeWidth": 1 },
          "encoding": {
            "longitude": { "field": "longitude_deg" },
            "latitude":  { "field": "latitude_deg"  },
            "longitude2": { "field": "labelLon" },
            "latitude2":  { "field": "labelLat" }
          }
        },
        {
          "mark": { "type": "text", "align": "left", "dx": -50, "dy": -20, "fontSize": 11, "fontWeight": "bold", "fill": "#111", "stroke": "black", "strokeWidth": 0.1 },
          "encoding": {
            "longitude": { "field": "labelLon" },
            "latitude":  { "field": "labelLat"  },
            "text":      { "field": "labelDone" }
          }
        }
      ]
    },
    {
      "data": { "url": "https://raw.githubusercontent.com/Kevinlkl/FIT3179_33522529_DV2/main/Datasets/my-airports.csv", "format": { "type": "csv" } },
      "transform": [
        { "filter": "datum.name == 'Langkawi International Airport'" },
        { "calculate": "toNumber(datum.longitude_deg) + 0.80", "as": "labelLon" },
        { "calculate": "toNumber(datum.latitude_deg)  + 1.52", "as": "labelLat" }
      ],
      "layer": [
        {
          "mark": { "type": "rule", "color": "#2E86AB", "strokeWidth": 1 },
          "encoding": {
            "longitude": { "field": "longitude_deg" },
            "latitude":  { "field": "latitude_deg"  },
            "longitude2": { "field": "labelLon" },
            "latitude2":  { "field": "labelLat" }
          }
        },
        {
          "mark": { "type": "text", "align": "left", "dx": 0, "dy": 0, "fontSize": 11, "fontWeight": "bold", "fill": "#111", "stroke": "black", "strokeWidth": 0.1 },
          "encoding": {
            "longitude": { "field": "labelLon" },
            "latitude":  { "field": "labelLat"  },
            "text":      { "value": "Langkawi International Airport" }
          }
        }
      ]
    }
    ]
}